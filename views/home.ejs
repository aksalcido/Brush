    <!-- Trending -->
    <div class="container-fluid" id="trending-container1">
        <div class="col-12 col-md-8">
            <h1>Trending</h1>
        </div>

        <div class="row">
           <% for (var i = 0; i < 6; i++) { %>
               <div class="col">
                  <a href="/artwork/<%= artworks[i]._id %>"><img class="img-thumbnail" src="<%= artworks[i].img.data %>"></a>
                  <figcaption class="figure-caption">
                      <span class="artwork-name">
                          <% if (artworks[i].name) { %>
                            <%= artworks[i].name %>
                          <% } else { %>
                            Nameless
                          <% } %>
                     </span> by <a href="/profile/<%= artworks[i].author.username %>"><%= artworks[i].author.username %></a>
                  </figcaption>
               </div>
            <% } %>
        </div>
    </div>

