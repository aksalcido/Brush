<body>
   <!-- Bootstrap Navbar -->
   <%- include ("./partials/default") %>

  <div id="home-display">
      <div id="home-message">
        <h1 class="display-4 home-text">Hello<% if (currentUser) { %> <%= currentUser.username %><% } %>, Welcome to Brush!</h1>
          <p class="lead home-text">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
        <hr class="my-4 home-text">

        <p class="lead home-text">
          Get started Creating Now
        </p>
        <a class="btn btn-primary btn-lg" href="/create" role="button">Create</a>
