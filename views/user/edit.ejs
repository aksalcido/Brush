<%- include('../partials/header') %>

<div class="container">
    <h1 style="text-align: center;">Profile Edit Page</h1>
    
    <div class="container" style="width: 80%; margin: 20px auto;">
        <form action="/profile/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <!-- Description -->
            <div class="form-group">
                <textarea class="form-control" name="user[description]" placeholder="description" rows="8"><%= user.description %></textarea>
            </div>

            <!-- Location -->
            <div class="form-group">
                <input class="form-control" type="text" name="user[location]" placeholder="location" value="<%= user.location %>">
            </div>

            <!-- Gender -->
            <div class="form-group">
                <input class="form-control" type="text" name="user[gender]" placeholder="gender" value="<%= user.gender %>">
            </div>
             
            <!-- Age -->
            <div class="form-group">
                <input class="form-control" type="text" name="user[age]" placeholder="age" value="<%= user.age %>">
            </div>
     
            <!-- Image Upload -->
            <div class="form-group">
                <label for="img">Select image:</label>
                <input type="file" name="file" accept="image/*">
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">
                    Submit
                </button>
            </div>
        </form>  
    </div>

   <a href="/profile/<%= user.username %>">zzz</a>
</div>



<%- include('../partials/footer') %>