        </div>
        <!-- Display Each Artwork by the User -->
        <div class="col-8" style="border: 1px solid black; background: rgb(247, 247, 247);">
            <div class="row" style="padding: 5px;">
                <% user.artworks.forEach(function(artwork) { %>
                    <div class="col">
                        <a href="/artwork/<%= artwork._id %>"><img class="img-thumbnail" src="<%=artwork.img.data%>"></a>
                     </div>
