<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="thumbnail">
                <img class="rounded mx-auto d-block" src="<%= artwork.image %>" style="width: 100%;
                height:auto; margin-top: 10px; border: 1px solid black;">
                
                <div class="caption-full" style="border: 1px solid black; padding: 5px; margin-top: 10px;">
                    <!-- Name of the Artwork -->
                    <h4>
                        <a>
                            <% if (artwork.name.length == 0) { %>
                                <i>No Name..</i>
                            <% } else { %>
                                <%= artwork.name %>
                            <% } %>
                        </a>
                    </h4>
                    <!-- Description of the Artwork -->
                    <p>
                        <% if (artwork.description.length == 0) { %>
                            <i>Description...</i>
                        <% } else { %>
                            <%= artwork.description %>
                        <% } %>
                    </p>

                    <h4>Created by Placeholder on <%= artwork.createdAt %></h4>
                </div>
                
                <!-- Comment Section -->
                <div class="well" style="margin-top: 10px;">
                    <!-- Comment Input Field & Submit Button -->
                    <div class="text-right">
                        <form action="<%=artwork._id%>/comment" method="POST">
                            <div class="form-group">
                                <textarea class="form-control" name="comment[text]" placeholder="text" rows="3"></textarea>
                            </div>
                            
                            <div class="form-group">
                                <button class="btn btn-success">Add New Comment</a>
                            </div>
                        </form>
                    </div>

                    <hr>

                    <!-- Comment Box -->
                    <div class="col-md-12">
                        <!-- Comment Username -->
                        <strong>Arnold</strong>
                        <!-- Comment Date -->
                        <span class="pull-right">12/24/2020</span>
                        <!-- Comment Text -->
                        <p>
                            Hello There!
                        </p>
                    </div>

                    <!-- Comment Box -->
                    <div class="col-md-12">
                        <!-- Comment Username -->
                        <strong>Tyler</strong>
                        <!-- Comment Date -->
                        <span class="pull-right">12/24/2020</span>
                        <!-- Comment Text -->
                        <p>
                            Wow first!
                        </p>
                    </div>
                </div>
            
            </div>
        </div>
    </div>

</div>
